@page
@model CanvasLMS.Pages.Invoice.IndexModel
@using CanvasLMS.Models

@{
    ViewData["Title"] = "Invoice";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h4 mb-0">Invoice</h2>
            <button onclick="window.print()" class="btn btn-light btn-sm">
                <i class="bi bi-printer"></i> Print
            </button>
        </div>
        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-12 text-center mb-4">
                    <h3 class="mb-0">Course Payment Invoice</h3>
                </div>
                <div class="col-sm-6">
                    <h6 class="mb-3">From:</h6>
                    <div><strong>Canvas LMS</strong></div>
                    <div>123 Education Street</div>
                    <div>Kuala Lumpur, 50000</div>
                    <div>Malaysia</div>
                </div>
                <div class="col-sm-6 text-sm-end">
                    <h6 class="mb-3">To:</h6>
                    <div><strong>@Model.Student?.User?.Name</strong></div>
                    <div>@Model.Student?.Address</div>
                    <div>@Model.Student?.Postcode @Model.Student?.City</div>
                    <div>@Model.Student?.State, @Model.Student?.Country</div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-sm-6">
                    <div><strong>Invoice Number:</strong> @Model.InvoiceNumber</div>
                </div>
                <div class="col-sm-6 text-sm-end">
                    <div><strong>Date:</strong> @Model.InvoiceDate.ToString("dd/MM/yyyy")</div>
                </div>
            </div>

            <div class="table-responsive mb-4">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Course</th>
                            <th>Description</th>
                            <th class="text-end">Amount (RM)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model.Enrollments)
                        {
                            <tr>
                                <td>@enrollment.SemesterCourse?.Course?.Name</td>
                                <td>Course Registration Fee</td>
                                <td class="text-end">@enrollment.SemesterCourse?.Fee.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="2">Total Amount</th>
                            <th class="text-end">RM @Model.TotalAmount.ToString("N2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="border-top pt-3">
                        <div class="text-muted">
                            <h6>Payment Information</h6>
                            <p class="mb-0">Note: This is a summary invoice for all course registrations.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        @@media print {
                .btn-print {
                    display: none;
                }

                .card {
                    border: none !important;
                    box-shadow: none !important;
                }

                .card-header {
                    background-color: #fff !important;
                    color: #000 !important;
                }

                body {
                    print-color-adjust: exact;
                    -webkit-print-color-adjust: exact;
                }
            }
        </style>
    }
