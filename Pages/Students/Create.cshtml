@page
@model CanvasLMS.Pages.Students.CreateModel
@using CanvasLMS.Models

@{
    ViewData["Title"] = "Create Student";
}

<h1>Create Student</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Student.FacultyId" class="control-label">Faculty</label>
                <select asp-for="Student.FacultyId" class="form-control" asp-items="ViewBag.FacultyId">
                    <option value="">-- Select Faculty --</option>
                </select>
                <span asp-validation-for="Student.FacultyId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Student.UserId" class="control-label">User</label>
                <select asp-for="Student.UserId" class="form-control" asp-items="ViewBag.UserId">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="Student.UserId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Student.Address" class="control-label"></label>
                <input asp-for="Student.Address" class="form-control" />
                <span asp-validation-for="Student.Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Student.Postcode" class="control-label"></label>
                <input asp-for="Student.Postcode" class="form-control" />
                <span asp-validation-for="Student.Postcode" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Student.City" class="control-label"></label>
                <input asp-for="Student.City" class="form-control" />
                <span asp-validation-for="Student.City" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Student.State" class="control-label"></label>
                <input asp-for="Student.State" class="form-control" />
                <span asp-validation-for="Student.State" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Student.Country" class="control-label"></label>
                <input asp-for="Student.Country" class="form-control" />
                <span asp-validation-for="Student.Country" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Student.BankAcc" class="control-label"></label>
                <input asp-for="Student.BankAcc" class="form-control" />
                <span asp-validation-for="Student.BankAcc" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Student.BankName" class="control-label"></label>
                <input asp-for="Student.BankName" class="form-control" />
                <span asp-validation-for="Student.BankName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Student.BankHolderName" class="control-label"></label>
                <input asp-for="Student.BankHolderName" class="form-control" />
                <span asp-validation-for="Student.BankHolderName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Student.Status" class="control-label">Status</label>
                <select asp-for="Student.Status" class="form-control" asp-items="ViewBag.Status">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Student.Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

