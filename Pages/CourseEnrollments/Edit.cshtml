@page
@model CanvasLMS.Pages.CourseEnrollments.EditModel

@{
    ViewData["Title"] = "Edit Course Enrollment";
}

<h1>Edit Course Enrollment</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseEnrollment.Id" />
            
            <div class="form-group mb-3">
                <label asp-for="CourseEnrollment.SemesterCourseId" class="form-label">Course</label>
                <select asp-for="CourseEnrollment.SemesterCourseId" class="form-select" asp-items="ViewBag.SemesterCourseId">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="CourseEnrollment.SemesterCourseId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CourseEnrollment.StudentId" class="form-label">Student</label>
                <select asp-for="CourseEnrollment.StudentId" class="form-select" asp-items="ViewBag.StudentId">
                    <option value="">-- Select Student --</option>
                </select>
                <span asp-validation-for="CourseEnrollment.StudentId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CourseEnrollment.Approval" class="form-label">Approval Status</label>
                <select asp-for="CourseEnrollment.Approval" class="form-select" asp-items="ViewBag.ApprovalOptions"></select>
                <span asp-validation-for="CourseEnrollment.Approval" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CourseEnrollment.Status" class="form-label">Enrollment Status</label>
                <select asp-for="CourseEnrollment.Status" class="form-select" asp-items="ViewBag.StatusOptions"></select>
                <span asp-validation-for="CourseEnrollment.Status" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

