@page
@model CanvasLMS.Pages.Semesters.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Semester</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Semester.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Semester.Name" class="control-label"></label>
                <input asp-for="Semester.Name" class="form-control" />
                <span asp-validation-for="Semester.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Semester.StartDate" class="control-label"></label>
                <input asp-for="Semester.StartDate" class="form-control" />
                <span asp-validation-for="Semester.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Semester.EndDate" class="control-label"></label>
                <input asp-for="Semester.EndDate" class="form-control" />
                <span asp-validation-for="Semester.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Semester.FacultyId" class="control-label">Faculty</label>
                <select asp-for="Semester.FacultyId" class="form-control" asp-items="Model.FacultyList">
                    <option value="">-- Select Faculty --</option>
                </select>
                <span asp-validation-for="Semester.FacultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.Status" class="control-label"></label>
                <select asp-for="Semester.Status" class="form-control" asp-items="Html.GetEnumSelectList<CanvasLMS.Models.SemesterStatus>()"></select>
                <span asp-validation-for="Semester.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
