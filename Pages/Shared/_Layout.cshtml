﻿<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CanvasLMS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-light">
    <header>
        @await Component.InvokeAsync("Navbar")
    </header>
    <div class="container">
        @await Component.InvokeAsync("Breadcrumb")
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (Context.Request.Path.Value.Contains("/login"))
    {
        <footer class="mt-5 py-4 bg-dark text-light">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-book-half me-2 fs-4"></i>
                            <span class="fs-5 fw-bold">CanvasLMS</span>
                        </div>
                        <p class="mb-0 mt-2">Empowering education through technology</p>
                    </div>
                    <div class="col-md-6 text-md-end mt-3 mt-md-0">
                        <p class="mb-0">
                            &copy; @DateTime.Now.Year - CanvasLMS 
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
