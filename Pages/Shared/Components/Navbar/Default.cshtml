@model CanvasLMS.Pages.Shared.NavbarViewModel

<nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom box-shadow mb-3">
    <div class="container">
        <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
            <i class="bi bi-book-half me-2"></i>CanvasLMS
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Index"><i class="bi bi-house-door me-1"></i>Home</a>
                </li>
                @if (Model.IsAuthenticated)
                {
                    @if (Model.UserRole == CanvasLMS.Models.Role.Student.ToString())
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-mortarboard me-1"></i>Student Services
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/CourseEnrollments/Enroll/Index">Semester Enrollment</a></li>
                                <li><a class="dropdown-item" asp-page="/CourseEnrollments/TimeTableMatching/Index">Timetable Matching</a></li>
                                <li><a class="dropdown-item" asp-page="/CourseEnrollments/AddDrop/Index">Course Add/Drop</a></li>
                                <li><a class="dropdown-item" asp-page="/CourseReviews/Index">Course Evaluation</a></li>
                                <li><a class="dropdown-item" asp-page="/StudentStatement/Index">Student Statement</a></li>
                                <li><a class="dropdown-item" asp-page="/RegistrationSummary/Index">Class Timetable</a></li>
                                <li><a class="dropdown-item" asp-page="/Payments/Index">Payments</a></li>
                            </ul>
                        </li>
                    }
                    @if (Model.UserRole == CanvasLMS.Models.Role.Admin.ToString())
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear me-1"></i>Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Students/Create">Manage Users</a></li>
                                <li><a class="dropdown-item" asp-page="/Faculties/Create">Manage Faculties</a></li>
                                <li><a class="dropdown-item" asp-page="/Semesters/Create">Manage Semesters</a></li>
                                <li><a class="dropdown-item" asp-page="/Payments/Create">Manage Payments</a></li>
                                <li><a class="dropdown-item" asp-page="/Courses/Create">Manage Courses</a></li>
                            </ul>
                        </li>
                    }
                }
            </ul>
            <ul class="navbar-nav">
                @if (Model.IsAuthenticated)
                {
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-person-circle me-1"></i>@Model.UserName
    </a>
    <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" asp-page="/Profile/Index"><i class="bi bi-person me-1"></i> Profile</a></li>
        @if (Model.UserRole == CanvasLMS.Models.Role.Student.ToString())
        {
            <li><a class="dropdown-item" asp-page="/StudentStatement/Index"><i class="bi bi-file-text me-1"></i> Student Statement</a></li>
            <li><a class="dropdown-item" asp-page="/ContactUs/Index"><i class="bi bi-envelope me-1"></i> Contact Us</a></li>
        }
        <li><hr class="dropdown-divider"></li>
        <li>
            <form method="post" asp-page="/Logout" class="d-inline">
                <button type="submit" class="dropdown-item text-danger">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </button>
            </form>
        </li>
    </ul>
</li>

                }
                else 
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Login"><i class="bi bi-box-arrow-in-right me-1"></i>Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
