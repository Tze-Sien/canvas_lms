@page
@model CanvasLMS.Pages.CourseReviews.CreateModel

@{
    ViewData["Title"] = "Create Course Review";
}

<h1>Create Course Review</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="CourseReview.CourseEnrollmentId" class="control-label">Course</label>
                <select asp-for="CourseReview.CourseEnrollmentId" class="form-control" asp-items="ViewBag.CourseEnrollmentId">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="CourseReview.CourseEnrollmentId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CourseReview.Rating" class="control-label">Rating (1-5 stars)</label>
                <div>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="CourseReview.Rating" 
                                   id="rating@(i)" value="@i" required />
                            <label class="form-check-label" for="rating@(i)">
                                @for (int j = 0; j < i; j++)
                                {
                                    <span class="text-warning">★</span>
                                }
                                @for (int j = i; j < 5; j++)
                                {
                                    <span class="text-muted">☆</span>
                                }
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="CourseReview.Rating" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CourseReview.Comment" class="control-label"></label>
                <textarea asp-for="CourseReview.Comment" class="form-control" rows="3"></textarea>
                <span asp-validation-for="CourseReview.Comment" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Create Review" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
