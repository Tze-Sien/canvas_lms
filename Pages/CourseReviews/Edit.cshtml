@page
@model CanvasLMS.Pages.CourseReviews.EditModel

@{
    ViewData["Title"] = "Edit Course Review";
}

<h1>Edit Course Review</h1>

<h4>@Model.Course.Name</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="CourseReview.Id" />
            <input type="hidden" asp-for="CourseReview.CourseEnrollmentId" />
            <input type="hidden" asp-for="CourseReview.StudentId" />
            <input type="hidden" asp-for="CourseReview.CreatedAt" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="CourseReview.Rating" class="control-label">Rating (1-5 stars)</label>
                <div>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="CourseReview.Rating" 
                                   id="rating@(i)" value="@i" required />
                            <label class="form-check-label" for="rating@(i)">
                                @for (int j = 0; j < i; j++)
                                {
                                    <span class="text-warning">★</span>
                                }
                                @for (int j = i; j < 5; j++)
                                {
                                    <span class="text-muted">☆</span>
                                }
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="CourseReview.Rating" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CourseReview.Comment" class="control-label">Your Review</label>
                <textarea asp-for="CourseReview.Comment" class="form-control" rows="4"></textarea>
                <span asp-validation-for="CourseReview.Comment" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-page="Index" asp-route-selectedCourseId="@Model.Course.Id" class="btn btn-secondary">Back to Reviews</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
