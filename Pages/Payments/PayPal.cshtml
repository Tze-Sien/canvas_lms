@page
@model CanvasLMS.Pages.Payments.PayPalModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PayPal Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .payment-card {
            max-width: 500px;
            width: 100%;
            padding: 2rem;
        }
    </style>
</head>

<body>
    <div class="card payment-card shadow">
        <div class="card-body text-center">
            <img src="https://www.paypalobjects.com/webstatic/mktg/logo/pp_cc_mark_111x69.jpg" alt="PayPal" class="mb-4"
                height="69">
            <h4 class="mb-3">Total Amount: RM @Model.Amount.ToString("N2")</h4>
            <p class="text-muted mb-4">Click the button below to complete your payment with PayPal</p>

            <form method="post">
                <button type="submit" class="btn btn-primary btn-lg px-5">
                    Pay with PayPal
                </button>
            </form>
        </div>
    </div>
</body>

</html>
