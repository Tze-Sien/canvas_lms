@page
@model CanvasLMS.Pages.Payments.IndexModel
@using CanvasLMS.Models

@{
    ViewData["Title"] = "Pending Payments";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="h4 mb-0">Pending Course Payments</h2>
        </div>
        <div class="card-body">
            @if (!Model.Enrollments.Any())
            {
                <div class="alert alert-info">
                    No pending payments found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Course</th>
                                <th>Student</th>
                                <th class="text-end">Amount (RM)</th>
                                <th>Status</th>
                                <th>Payment Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Enrollments)
                            {
                <tr class="@(item.PaymentStatus == PaymentStatus.Paid ? "table-success" : "")">
                                    <td>@item.SemesterCourse?.Course?.Name</td>
                                    <td>@item.Student?.User?.Name</td>
                                    <td class="text-end">@item.SemesterCourse?.Fee.ToString("N2")</td>
                                    <td>
                                        @if (item.PaymentStatus == PaymentStatus.Paid)
                                        {
                                            <span class="badge bg-success">Paid</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.PaidAt.HasValue)
                                        {
                                            @item.PaidAt.Value.ToString("dd/MM/yyyy hh:mm tt")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="border-top mt-3 pt-3">
                        <div class="row align-items-center">
                            <div class="col">
                                <h5 class="mb-0">Total Pending Amount: RM @Model.TotalPendingAmount.ToString("N2")</h5>
                            </div>
                            <div class="col text-end">
                                @if (Model.HasPendingPayments)
                                {
                                    <a href="@Url.Page("./PayPal", new { amount = Model.TotalPendingAmount })"
                                        class="btn btn-primary">
                                        <i class="bi bi-credit-card"></i> Pay All Pending Fees
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .table td,
        .table th {
            vertical-align: middle;
        }

        .card {
            border-radius: 0.5rem;
        }

        .card-header {
            border-radius: calc(0.5rem - 1px) calc(0.5rem - 1px) 0 0 !important;
        }
    </style>
}
